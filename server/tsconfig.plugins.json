{
  "extends": "./tsconfig.json",
  "exclude": ["node_modules", "test", "dist", "src", "**/*spec.ts"],
  "compilerOptions": {
    "outDir": "./dist/plugins",
    "rootDir": "../plugins",
    "baseUrl": ".",
    "paths": {
      "@nestjs/*": ["node_modules/@nestjs/*"]
    },
    "declaration": true,
    "sourceMap": true
  },
  "include": ["../plugins/*/server/src/**/*"]
}
